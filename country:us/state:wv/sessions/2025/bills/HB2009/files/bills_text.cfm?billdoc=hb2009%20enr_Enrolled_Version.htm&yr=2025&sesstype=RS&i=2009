 if(!f){c[a][c[a].length++]=args[k];}}}
}
function _Snap() { //v2.65 by PVII
 var x,y,ox,bx,oy,p,tx,a,b,k,d,da,e,el,tw,q0,xx,yy,w1,pa='px',args=_Snap.arguments;a=parseInt(a);
